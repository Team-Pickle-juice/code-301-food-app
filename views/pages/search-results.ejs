<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="x-tmpl-mustache" id="recipeInfo-template">
        <ul>
          <li>ingredients{{recipe.ingredients}}</li>
          <li>instructions{{recipe.instructions}}</li>
          <li>price{{recipe.price}}</li>
        </ul>
      </script>
    <title>Search Results</title>
</head>
<body>
    <h1>Choose from Your Recipe List</h1>
    <% recipes.forEach (recipe => { %>
        <section>
            <img src="<%= recipe.image %>"/>
            <h3>Recipe Name</h3>
            <p><%= recipe.recipeName %></p>
            <h3>Calories</h3>
            <p><%= recipe.calories %></p>
            <section class="recipeDetails">

            </section>

            <form class="recipeForm">
                <input type="hidden" name="recipename">
                <input type="hidden" name="calories">
                <input type="hidden" name="recipeID" class="recipeID" value="<%= recipe.recipe_id %>">
                <button class="recipeInfo">View Recipe Information</button>
            </form> 
            
        </section>
   <% }) %>
   <script src="https://unpkg.com/mustache@latest"></script>
   <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
   <script src="/scripts/app.js"></script>
</body>

</html>